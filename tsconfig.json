{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["esnext", "dom"],
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "declaration": true,
      "noEmit": false,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "types": ["./types", "node"],
      "rootDir": "./src",
      "outDir": "./dist"
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
  }