{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "lib": ["es6", "dom"],
      "jsx": "react-jsx",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "declaration": true,
      "noEmit": false,
      "types": ["./types"],
      "rootDir": "./src",
      "outDir": "./dist",
      "allowJs": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["./src/**/*"]
  }